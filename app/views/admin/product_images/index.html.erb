<h1>Listing product_images</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Product</th>
    <th>Sort</th>
  </tr>

<% @product_images.each do |product_image| %>
  <tr>
    <td><%=h product_image.image %></td>
    <td><%=h product_image.product %></td>
    <td><%=h product_image.sort %></td>
    <td><%= link_to 'Show', product_image %></td>
    <td><%= link_to 'Edit', edit_product_image_path(product_image) %></td>
    <td><%= link_to 'Destroy', product_image, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New product_image', new_product_image_path %>