<h1>Editing product_comment</h1>

<% form_for(@product_comment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </p>
  <p>
    <%= f.label :user_price %><br />
    <%= f.text_field :user_price %>
  </p>
  <p>
    <%= f.label :ipaddr %><br />
    <%= f.text_field :ipaddr %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @product_comment %> |
