<div id="main">
<h2>文章列表</h2>
<%=render :partial =>"/admin/articles/search" %>
<p style="padding: 0 80px;text-align:right"><%= link_to '添加新文章', new_admin_article_path %></p>
<table   class="data2" >
  <tr  class="odd">
    <th> 分类 </th>
    <th>标题</th>
    <th>作者</th>
    <th>操作</th>
  </tr>
  <% @articles.each do |article| %>
    <tr class="<%= cycle("even", "odd")%>">
      <td><%=h article.category.try(:name) %></td>
      <td><%=h article.title %></td>
      <td><%=h article.author %></td>
      <td><%= link_to '显示', admin_article_path(article) %>|
        <%= link_to '编辑', edit_admin_article_path(article) %>|
        <%= link_to '删除', admin_article_path(article), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p style="padding: 0 80px;text-align:right"><%= link_to '添加新文章', new_admin_article_path %></p>
<br />
</div>