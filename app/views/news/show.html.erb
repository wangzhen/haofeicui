<% content_for :head do %>
  <%= stylesheet_link_tag '/stylesheets/pagecontent' ,'/stylesheets/pagetitlemenu_dolphin'  , '/stylesheets/pagetitlemenu_dolphin' %>
  <%= javascript_include_tag "/javascripts/base" , '/javascripts/common' , '/javascripts/form' ,'/javascripts/blockui' %>
  <% end %>
<div id="content" style="width: 1002px; background: none repeat scroll 0% 0% rgb(255, 255, 255); margin: 0px auto;">


<!-- 网页标题(菜单) -->

<div id="pdv_5640" class="pdv_class" title="关于我们" style="width: 210px; height: 341px; top: 0px; left: 0px; z-index: 8;">
<div id="spdv_5640" class="pdv_content" style="overflow: visible; width: 100%;">
<div class="pdv_border" style="border: 0px none; height: 100%; padding: 0pt; margin: 0pt; background: url(/images/left-border-title.jpg) repeat-y scroll 0% 0% rgb(249, 249, 249);">
<div style="height: 100%; background: url() repeat-y scroll right center transparent;">
<div style="height: 40px; border: 0px none; padding: 0pt; margin: 0pt; background: url(/images/left-border-title.jpg) no-repeat scroll 0px 0px transparent;">
	<div style="float: left; height: 33px; font: 14px/32px Simsun; color: rgb(80, 80, 80); padding: 5px 0px 0px 30px;">关于我们</div>
	<div style="float: right; height: 40px; width: 16px; background: url() no-repeat scroll -984px 0px transparent;"></div>

</div>
<div style="margin: 0px; padding: 0px;">


<div class="titlemenu_dolphin">

              <% Category.all.each  do |c|   %>
                <a href="/news?category_id=<%= c.id %>"  target="_self" class="titlemenu_dolphin">
                  <%= c.name   %>
                </a>
              <% end %>

</div>

</div>
</div>
</div>
<div style="margin-top: -9px; height: 9px; line-height: 9px; background: url(&quot;../../base/border/788/images/title.jpg&quot;) no-repeat scroll 0px -299px transparent;">&nbsp;</div>
<div style="float: right; margin-top: -9px; width: 10px; height: 9px; line-height: 9px; background: url(&quot;../../base/border/788/images/title.jpg&quot;) no-repeat scroll -990px -299px transparent;">&nbsp;</div>

</div>
</div>

<!-- 当前位置提示条 -->

<div id="pdv_5641" class="pdv_class" title="当前位置" style="width: 760px; height: 30px; top: 0px; left: 242px; z-index: 9;">
<div id="spdv_5641" class="pdv_content" style="overflow: hidden; width: 100%; height: 100%;">
<div class="pdv_border" style="border: 0px none; height: 30px; padding: 0pt; margin: 0pt; background: url(/images/nav-border-title.jpg) no-repeat scroll 0px 0px transparent;">
	<div style="float: right; height: 100%; width: 80px; background: url(/images/nav-border-title.jpg) no-repeat scroll -920px 0px transparent;"></div>


<div id="nav">
  您现在的位置：<a href="/">首页</a> &gt;<a href="/news">新闻</a>&gt;<%= link_to  @article.category.name  , news_index_path(:category_id => @article.category_id)%>&gt; <%= @article.title %>

</div>

</div>

</div>
</div>

<!-- 网页内容详情 -->

<div id="pdv_5642" class="pdv_class" title="内容标题" style="width: 700px; height: 198px; top: 60px; left: 260px; z-index: 10;">
<div id="spdv_5642" class="pdv_content" style="overflow: visible; width: 100%;">
<div class="pdv_border" style="margin: 0pt; padding: 0pt; height: 100%; border: 0px solid rgb(221, 221, 221); background: none repeat scroll 0% 0% rgb(255, 255, 255);">
	<div style="height: 25px; margin: 1px; display: none; background: none repeat scroll 0% 0% rgb(204, 204, 204);">
		<div style="float: left; margin-left: 12px; line-height: 25px; font-weight: bold; color: rgb(255, 255, 255);">
		内容标题
		</div>
		<div style="float: right; margin-right: 10px; display: none;">

		<a href="/" style="line-height: 25px; color: rgb(255, 255, 255);">更多</a>
		</div>
	</div>
<div style="padding: 0px;">

<div id="pagecontent" class="page_content">
  <h1 style="text-align: center;margin-top:0; line-height: 50px;"><%= @article.title %></h1>
    <%= @article.body %>
</div>
  <script>

$(document).ready(function(){
	$("#pagecontent").find("img").hide();
	var w=$("#pagecontent")[0].offsetWidth;
	$("#pagecontent").find("img").each(function(){
		$(this).show();
		if(this.offsetWidth>w){
			this.style.width=w + "px";
			$().setBg();
		}
	});

});

</script>

</div>

</div>

</div>
</div>
</div>

